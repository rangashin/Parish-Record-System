<Page x:Class="LoginForm.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoginForm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1500" 
	  d:DesignWidth="800"
      Title="Page2">

	<Grid  Height="650" Width="800">
		<!--Button as a Link button using style-->
		<Button Margin="0,0,-170,0" Click="Button_Click">
			<Button.Template>
				<ControlTemplate>
					<TextBlock>  
                    <ContentPresenter />
					</TextBlock>
				</ControlTemplate>
			</Button.Template>
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="Foreground" Value="Navy" />
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="true">
							<Setter Property="Foreground" Value="Red" />
						</Trigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
		<!--end Button as a Link button using style-->
		<Grid Margin="-90,0,10,0" Background="Azure" Height="1500" VerticalAlignment="Top">
			<Grid.RowDefinitions>
				<RowDefinition Height="252*" />
				<!--   <RowDefinition Height="12*" />-->
			</Grid.RowDefinitions>
			<TextBlock Height="20" HorizontalAlignment="Center" Margin="0,40,0,0" x:Name ="errormessage" VerticalAlignment="Top" Width="246"  OpacityMask="Crimson" Foreground="#FFE5572C" />



			<!-- Label Content -->
			<Label Content="Name of Father" HorizontalAlignment="Left" Margin="112,249,0,0" VerticalAlignment="Top" FontFamily="Tw Cen MT" FontSize="20"/>

			<Label Content="Name of Mother" HorizontalAlignment="Left" Margin="109,360,0,0" VerticalAlignment="Top" FontFamily="Tw Cen MT" FontSize="20"/>

			<DatePicker Height="25" HorizontalAlignment="Left" Margin="112,142,0,0" Name="datePicker1" VerticalAlignment="Top" Width="222" FontFamily="Arial" FontSize="14" />



			<!--For First Name-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,60,0,0" Name="textBlockBFirstname" Text="First Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />
			<!--For Last Name-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,87,0,0" Name="textBlockBLastName" Text="Last Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />
			<!--For Middle Name-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,115,0,0" Name="textBlockBMiddleName" Text="Middle Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />
			<!--For Date of Birth-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,145,0,0" Name="textBlockBBirth" Text="Date of Birth:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14"  />
			<!--For Place of Birth-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,173,0,0" Name="textBlockBPlace" Text="Place of Birth:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14"  />
			<!--For Sex-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,199,0,0" Name="textBlockBSex" Text="Sex:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />


			<!-- Text Boxes for Upper-->
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,59,0,0" Name="textBoxHFirstName" VerticalAlignment="Top" Width="222" />
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,87,0,0" Name="textBoxHLastName" VerticalAlignment="Top" Width="222" />
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,115,0,0" Name="textBoxHMiddleName" VerticalAlignment="Top" Width="222" TextChanged="textBoxHMiddleName_TextChanged" />

			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,167,0,0" Name="textBoxBPlace" VerticalAlignment="Top" Width="222" FontSize="14" />
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,0,0,355" Name="textBoxHPlace" VerticalAlignment="Bottom" Width="222" />


			<!--Text Block for Father-->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,279,0,0" Name="textBlockFBLastName" Text="Last Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />

			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,304,0,0" Name="textBlockFBFirstName" Text="First Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />

			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,332,0,0" Name="textBlockFBMiddleName" Text="Middle Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />

			<!--Text Box for Father-->
			<TextBox Height="22" HorizontalAlignment="Left" Margin="112,278,0,0" Name="textBoxPlaceFBLastName" VerticalAlignment="Top" Width="222" />

			<TextBox Height="22" HorizontalAlignment="Left" Margin="112,300,0,0" Name="textBoxPlaceFBFirstName" VerticalAlignment="Top" Width="222" />

			<TextBox Height="22" HorizontalAlignment="Left" Margin="112,322,0,0" Name="textBoxPlaceFBMiddleName" VerticalAlignment="Top" Width="222" />




			<!-- For Mother -->
			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,390,0,0" Name="textBlockMBLastName" Text="Last Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />

			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,418,0,0" Name="textBlockMBFirstName" Text="First Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />


			<TextBlock Height="23" HorizontalAlignment="Left" Margin="23,453,0,0" Name="textBlockMBMiddleName" Text="Middle Name:" VerticalAlignment="Top" Width="110" FontFamily="Arial" FontSize="14" />






			<!-- Text Box for Mother -->
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,385,0,0" Name="textBoxPlaceMBLastName" VerticalAlignment="Top" Width="222" />
			<TextBox Height="23" HorizontalAlignment="Left" Margin="112,413,0,0" Name="textBoxMBFirstName" VerticalAlignment="Top" Width="222" />
			<TextBox Height="24" HorizontalAlignment="Left" Margin="112,442,0,0" Name="textBoxMBMiddleName" VerticalAlignment="Top" Width="222" />


			<StackPanel Orientation="Vertical" Name="spRoles" Margin="4,40,-4,-40">
				<RadioButton Name="radBMale" HorizontalAlignment="Left" Margin="111,160,0,0" VerticalAlignment="Top" Content="Male" FontFamily="Arial" FontSize="14"/>
				<RadioButton Name="radBFemale" HorizontalAlignment="Left" Margin="111,0,0,0" VerticalAlignment="Top" Content="Female" FontFamily="Arial" FontSize="14"/>

			</StackPanel>
			<Button Content="Submit" Height="24" Width="82" HorizontalAlignment="Left" Margin="112,486,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>
			<Button Content="Clear" Height="24" Width="82" HorizontalAlignment="Left" Margin="205,486,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14"/>

			<Button Content="Close" Height="24" Width="82" HorizontalAlignment="Left" Margin="153,521,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Click="Close_Button"/>

			<Label Content="Baptismal Certificate" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" FontFamily="Tw Cen MT"/>


			<!-- Buttons -->
			<!--<Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="285,323,0,0" Name="Submit" VerticalAlignment="Top" Width="70" Click="" />
            <Button Content="Reset" Height="23" HorizontalAlignment="Left" Margin="370,323,0,0" Name="button2" VerticalAlignment="Top" Width="70" Click="" />
            <Button Content="Cancel" Height="24" HorizontalAlignment="Right" Margin="0,323,206,0" Name="button3" VerticalAlignment="Top" Width="70" Click="button3_Click" RenderTransformOrigin="0.172,-0.151" /> -->

		</Grid>
	</Grid>
</Page>
